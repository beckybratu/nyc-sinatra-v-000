<h1>Edit <%=@figure.name%></h1>

<form action="/figures/<%= @figure.id %>" method="POST">
 <input type="hidden" name="_method" value="PATCH">

 <label for="figure_name">Name</label>
 <input type="text" name="figure[name]" id="figure_name" value="<%=@figure.name%>">

 <label for="landmark_name">New landmark:</label>
 <input name="landmark[name]" type="text" id="new_landmark">
 <br></br>

 <label for="landmarks">Landmarks:</label>

 <% Landmark.all.each do |landmark| %>
   <input type="checkbox" name="figure[landmark_ids][]" value="<%=landmark.id%>" id="landmark_<%=landmark.id%>"><%= "checked" if @figure.landmarks.include?(landmark)%>><%= landmark.name %>
 <% end %>

 <br></br>

 <label for="title[name]">New title:</label>
 <input name="title[name]" type="text" id="new_title">
 <br></br>

 <label for="titles">Titles:</label>

 <% Title.all.each do |title| %>
   <input type="checkbox" name="figure[title_ids][]" value="<%=title.id%>" id="title_<%=title.id%>"><%="checked" if @figure.titles.include?(title)%>> <%= title.name %>

 <% end %>

 <br></br>

 <input type="submit" value="Edit Figure">
</form>
