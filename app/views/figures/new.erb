<h1>Add a new figure</h1>
<form action="/figures" method="POST">
  <label for="figure_name">Figure name:</label>
  <input name="figure[name]" type="text" id="figure_name"> </br>

  <label>Add a landmark:</label>
  <input name="landmark[name]" type="text" id="new_landmark">
  <br></br>

  <label>Or choose from these landmarks:</label>

  <% Landmark.all.each do |landmark| %>
    <input type="checkbox" name="figure[landmark_ids][]" value="<%=landmark.id%>" id="landmark_<%=landmark.id%>"> <%= landmark.name %>
  <% end %>

  <br></br>

  <label>Add a new title:</label>
  <input name="title[name]" type="text" id="new_title">
  <br></br>

  <label>Or choose from these titles:</label>

  <% Title.all.each do |title| %>
    <input type="checkbox" name="figure[title_ids][]" value="<%=title.id%>" id="title_<%=title.id%>"> <%= title.name %>
  <% end %>

  <br></br>

  <input type="submit" value="Create new figure">

</form>
